<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/chat.css">
    <link rel="stylesheet" href="/home.css">
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css">
</head>

<body>
    <header>
        <nav class="navbar">
            <div class="container">
                <div class="logo">
                    <img  src="/fit_logo.png" alt="">
                </div>
                <ul class="nav-links">
                    <li><a href="/">Home</a></li>
                    <li><a href="/askquery">Fit Q&A</a></li>
                    <li><a href="/blogs">Blog</a></li>
                    <li><a href="/task">Tasks</a></li>
                    <li><a href="/sampark">Contact Us</a></li>
                </ul>
                <button id="sidebarBtn" onclick="sidebar_open()">â˜°</button>
        </nav>
        <div  id="mySidebar" >
            <button onclick="sidebar_close()">Close &times;</button>
            <a href="/">Home</a>
            <a href="/askquery">Fit Q&A</a>
            <a href="/blogs">Blog</a>
            <a href="/task">Tasks</a>
            <a href="/sampark">Contact Us</a>
          </div>
    </header>
    
    <section class="chat_sec">
       
        <div>
            <h1>Post your any fitness query here..</h1>
        </div>
        <div class="chat_inp">
            <form class="chat_inp" method="post">
                <textarea name="textarea" placeholder="enter your query.."></textarea><br>
                <button class="createBtn">post</button>
            </form>
        </div>
        <div class="chat_box">
            <% queryData.forEach((elem,ind)=>{ %>
                <div class="query_box">
                    <div>
                        <p><%= elem.askQuery %></p>
                    </div>
                    <div>
                        <form style="display: inline;" action="/askquery/edit/<%=elem._id%>" method="get">
                            <button>edit</button>
                        </form>
                        <button onclick="replyfunc()">reply</button>
                        <form style="display: inline;" action="/askquery/delete/<%=elem._id%>" method="post">
                            <button>delete</button>
                        </form>
                       
                    </div>

                    <div class="replyPopup">
                        <form action="/askquery/reply/<%=elem._id%>" method="post">
                                <p class="popPara">0</p>
                                <textarea placeholder="enter something.." name="replies"></textarea><br>
                                <button class="popBtn">add</button>
                        </form>
                    </div>
                
                    <section class="replySection">
                        <span>replies</span>
                        <a href="/askquery/reply"> <button class="replyBtn" onclick="showReply(<%=ind%>)" style="display: inline;">see</button></a>
                        <div class="replyUL">
                        <ul>
                            

                        </ul>
                    </div>
                    </section>
                </div>
               
           <% }) %>
            
        </div>

    </section>
  <div>
   
  </div>

    
    <footer>
        <div id="footer-content">

        <div class="footerlogo">
            <img  src="/fit_logo.png" alt="logo"> 
            <p>copyright
                <i class="fa-regular fa-copyright" style="color: #b3b3b3;"></i>
                2023 Fit Bucket
            </p>
        </div>

        <div>
            <h3>Useful Links</h3>
            <ul>
                <li><a href="/blogs">Blog</a></li>
                <li><a href="/task">Tasks</a></li>
                <li><a href="/sampark">Contact Us</a></li>
            </ul>
        </div>
       
        </div>
        
    </footer>
    <script src="./home.js"></script>
</body>
<script src="./chat.js"></script>

</html>